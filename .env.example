# MySQL HeatWave Database Configuration
MYSQL_HOST=localhost
MYSQL_PORT=3306
MYSQL_USER=your_username
MYSQL_PASSWORD=your_password
MYSQL_DATABASE=heatwave_rag

# LangChain API Keys
# OpenAI
OPENAI_API_KEY=your_openai_api_key
OPENAI_API_BASE=https://api.openai.com/v1

# Anthropic Claude
ANTHROPIC_API_KEY=your_anthropic_api_key

# Cohere
COHERE_API_KEY=your_cohere_api_key

# HuggingFace
HUGGINGFACE_API_KEY=your_huggingface_api_key

# Azure OpenAI (Optional)
AZURE_OPENAI_API_KEY=your_azure_openai_api_key
AZURE_OPENAI_ENDPOINT=your_azure_openai_endpoint
AZURE_OPENAI_DEPLOYMENT_NAME=your_deployment_name
AZURE_OPENAI_API_VERSION=2023-05-15

# Embedding Model Configuration
EMBEDDING_MODEL=text-embedding-ada-002  # or sentence-transformers/all-MiniLM-L6-v2
EMBEDDING_DIMENSION=1536  # 1536 for ada-002, 384 for all-MiniLM-L6-v2

# LLM Configuration
LLM_MODEL=gpt-3.5-turbo  # or gpt-4, claude-3, etc.
LLM_TEMPERATURE=0.7
LLM_MAX_TOKENS=2000

# Vector Table Configuration
VECTOR_TABLE_NAME=vector_documents
VECTOR_TABLE_CREATE_IF_NOT_EXISTS=true

# Application Configuration
LOG_LEVEL=INFO
BATCH_SIZE=100
CHUNK_SIZE=1000
CHUNK_OVERLAP=200